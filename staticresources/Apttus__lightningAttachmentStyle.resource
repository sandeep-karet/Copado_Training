span.slds-file-selector__text {
    display: none;
}

span.slds-file-selector__button {
    visibility: hidden;
}

span.slds-file-selector__button:after {
    content: 'Add Files';
    visibility: visible;
    display: block;
    position: absolute;
}

span.slds-form-element__label {
    display: none;
}