<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Opportunity_if_record_is_Cohort</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(RelationshipType__c, &apos;Cohort&apos;), ISBLANK(CohortOpportunity__c ))</errorConditionFormula>
    <errorMessage>Please input the related Opportunity for this Cohort Client.</errorMessage>
</ValidationRule>
