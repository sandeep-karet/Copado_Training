<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FirstName_NoSpecialChar</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( FirstName__c ,&quot;^[a-z A-Z&apos;]*$&quot;))</errorConditionFormula>
    <errorDisplayField>FirstName__c</errorDisplayField>
    <errorMessage>First Name field cannot contain any special characters except apostrophes.</errorMessage>
</ValidationRule>
