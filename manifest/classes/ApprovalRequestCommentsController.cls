public class ApprovalRequestCommentsController {
  // ID of the record whose most recent approval process comments to retrieve
  public ID targetObjectId { get; set; }
  string commentsconcat = '';

  public String comments {
    get {
      if (comments == null) {
        ProcessInstanceStep lastStep = getLastApprovalStep(); //up
        comments = (lastStep != null) ? lastStep.comments : ''; //up
        //comments = getLastApprovalStep(); up2
      }
      return comments;
    }
    private set;
  }

  public ApprovalRequestCommentsController() {
  }

  // Queries the most recent approval process step for the target record
  private ProcessInstanceStep getLastApprovalStep() {
    //up
    //private String getLastApprovalStep() { up2
    List<ProcessInstanceStep> steps = new List<ProcessInstanceStep>(
      [
        SELECT Comments
        FROM ProcessInstanceStep
        WHERE ProcessInstance.TargetObjectId = :targetObjectId
        ORDER BY SystemModStamp DESC
        LIMIT 1
      ]
    );
    if (steps.size() > 0) {
      for (ProcessInstanceStep step : steps) {
        if (step.Comments != null) {
          commentsconcat = commentsconcat + ' ' + step.Comments + ' ; ';
        }
      }
    }
    return (steps.size() > 0) ? steps[0] : null; //up
    //return ( steps.size() > 0 ) ? commentsconcat : null;2
  }
}