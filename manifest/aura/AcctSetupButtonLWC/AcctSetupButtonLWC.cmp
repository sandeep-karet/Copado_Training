<aura:component implements="flexipage:availableForAllPageTypes,force:hasrecordID,force:appHostable,lightning:isUrlAddressable,force:lightningQuickActionwithoutHeader" >
    
    <aura:html tag="style">       
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }       
        .slds-modal__content{
        height:unset !important;
        max-height:unset !important;        
        }
    </aura:html> 
    <aura:attribute name="recordId" type="string" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <lightning:card class="slds-size--1-of-1 ">                                         
        <div class="slds-grid slds-wrap slds-align_absolute-center">
            <div class="slds-p-right_x-large">
                <lightning:icon iconName="action:flow" variant="warning"/>
            </div>
            <div> 
                <h1 class="slds-text-heading--medium">NASF FROM ACCOUNT SETUP WIZARD</h1>							
            </div>
        </div> 
        <div class="slds-grid slds-wrap slds-align_absolute-center slds-p-top_large">
            <p>&#8227; Validate/Update required fields for account record<br/>
                &#8227; Validate/Update required fields for primary billing contact record<br/>
                &#8227; Validate/Create account relationship <br/>
                &#8227; Validate all servicing accounts <br/>
                &#8227; NASF Form Setup <br/>
            </p>
        </div>
    </lightning:card>   
    <div class="slds-m-top_medium modal-footer slds-modal__footer slds-size_1-of-1">
        <lightning:button variant="neutral" label="Cancel" onclick="{!c.cancel}"/>                             
        <lightning:button variant="success" type="submit" name="save" label="Start Wizard" onclick="{!c.handleClick}"/>
    </div> 
</aura:component>