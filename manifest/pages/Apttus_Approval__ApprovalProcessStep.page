                                    reRender="idApprovalProcessStepForm"
                                    status="idStatusPleaseWaitSpinnerTop" />

                <apex:commandButton value="{!$Label.Apttus_Approval__Save}" 
                                    action="{!doSave}"
                                    rendered="{!(IsAddMode && isLastStep) || isEditMode}"
                                    reRender="idApprovalProcessStepForm"
                                    status="idStatusPleaseWaitSpinnerTop" />
                                    
